@using OvpNgDatabase.Models.OvpNg
@model List<Stage>
@{
    ViewBag.Title = "Администрирование базы данных";
}

<h3 class="m-3">@ViewBag.Title</h3>

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-3">
            @Html.Partial("_AdminMenu")
        </div>
        <div class="col-sm">
            @Html.Partial("_AddStage", new Stage())
        </div>
    </div>
</div>
<h5 class="mt-4">Существующие состояния объекта:</h5>
<table class="table table-striped">
    <thead class="thead-blue">
        <tr>
            <th scope="col">@Html.DisplayNameFor(model => model[0].Id)</th>
            <th scope="col">@Html.DisplayNameFor(model => model[0].Name)</th>
            <th scope="col">@Html.DisplayNameFor(model => model[0].CreatedAt)</th>
            <th scope="col">@Html.DisplayNameFor(model => model[0].CreatedBy)</th>
            <th scope="col">@Html.DisplayNameFor(model => model[0].LastEditAt)</th>
            <th scope="col">@Html.DisplayNameFor(model => model[0].LastEditBy)</th>
            <th scope="col">Редактировать</th>
            <th scope="col">Удалить</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var stage in Model)
            {
            <tr>
                <td>@Html.DisplayTextFor(stageItem => stage.Id)</td>
                <td>@Html.DisplayTextFor(stageItem => stage.Name)</td>
                <td>@Html.DisplayTextFor(stageItem => stage.CreatedAt)</td>
                <td>@Html.DisplayTextFor(stageItem => stage.CreatedBy)</td>
                <td>@Html.DisplayTextFor(stageItem => stage.LastEditAt)</td>
                <td>@Html.DisplayTextFor(stageItem => stage.LastEditBy)</td>
                
                @using (Html.BeginForm("GetEditStage", "Admin", FormMethod.Get))
                {
                    <td>
                        <button class="btn btn-primary btn-outline-primary" name="id" value="@stage.Id" type="submit">Редактировать</button>
                    </td>
                }
                @using (Html.BeginForm("DeleteStage", "Admin", FormMethod.Post))
                {
                    <td>
                        @Html.HiddenFor(stageItem => stage.Id)
                        <button class="btn btn-primary btn-outline-danger" type="submit">Удалить</button>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
</div>