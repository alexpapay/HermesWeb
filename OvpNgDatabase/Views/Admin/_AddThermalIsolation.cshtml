@model OvpNgDatabase.Models.OvpNg.ThermalIsolation

<h5>Добавить новую теплоизоляцию:</h5>

@using (Html.BeginForm("AddThermalIsolation", "Admin", FormMethod.Post))
{
    <table class="table table-striped">
        <tr>
            <th scope="col">Наименование данных</th>
            <th scope="col">Значение</th>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(model => model.Purchase)</td>
            <td>@Html.TextBoxFor(objectModel => objectModel.Purchase, new { @class = "form-control" })</td>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(model => model.IsAvailable)</td>
            <td>@Html.CheckBoxFor(objectModel => objectModel.IsAvailable, new { @class = "form-control" })</td>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(model => model.Volume)</td>
            <td>@Html.TextBoxFor(objectModel => objectModel.Volume, new { @class = "form-control" })</td>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(model => model.Square)</td>
            <td>@Html.TextBoxFor(objectModel => objectModel.Square, new { @class = "form-control" })</td>
        </tr>
    </table>
    <div class="row h-100 justify-content-center align-items-center">
        <button class="btn btn-primary btn-outline-success align-content-center" type="submit">Добавить</button>
    </div>
}